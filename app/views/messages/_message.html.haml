.wrapper__main__messages__message
  .wrapper__main__messages__message__data
    .wrapper__main__messages__message__data__user
      = message.user.name
    .wrapper__main__messages__message__data__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .wrapper__main__messages__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?